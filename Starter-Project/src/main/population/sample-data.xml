<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="conversion-service.xml" />
	
	<!--  Shouts -->
	
	<bean id="player01" class="acme.entities.players.Player">
		<property name="player" value="Stephen Curry"/>
		<property name="team" value="Golden State Warriors"/>
		<property name="teamLastSeason" value="Golden State Warriors"/>
		<property name="quote" value="Success is not an accident, success is actually a choice"/>
	</bean>

	<bean id="player02" class="acme.entities.players.Player">
		<property name="player" value="Lebron James"/>
		<property name="team" value="LA Lakers"/>
		<property name="teamLastSeason" value="Cleveland Cavaliers"/>
		<property name="quote" value="You can't be afraid to fail"/>
	</bean>
	
	<bean id="player03" class="acme.entities.players.Player">
		<property name="player" value="Kyrie Irving"/>
		<property name="team" value="Brookyln Nets"/>
		<property name="teamLastSeason" value="Boston Celtics"/>
		<property name="quote" value="Everybody in the NBA is good. And then you have the really good ones and the great ones"/>
	</bean>
	
</beans>
